{
  "name": "hospital-queue-backend",
  "version": "1.0.0",
  "description": "Hospital Queue Management System Backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build-frontend": "cd ../frontend && npm run build",
    "heroku-postbuild": "cd ../frontend && npm install && npm run build",
    "package": "pkg server.js --target node18-win-x64 --output hospital-queue-system.exe",
    "build-exe": "npm run build-frontend && npm run package",
    "dist": "npm run build-exe && node create-dist.js",
    "install-deps": "npm install && cd ../frontend && npm install"
  },
  "dependencies": {
    "ascii": "^1.0.0",
    "bcryptjs": "^2.4.3",
    "binding": "^3.0.3",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "fs-extra": "^11.1.1",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongoose": "^7.8.7",
    "multer": "^2.0.2",
    "open": "^10.2.0",
    "path": "^0.12.7",
    "pdf-to-printer": "^5.6.1",
    "pdfkit": "^0.17.2",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "../frontend/build/**/*",
      "uploads/**/*",
      "audio/**/*",
      "models/**/*",
      "routes/**/*",
      "*.env",
      "*.js",
      "scripts/**/*.js"
    ],
    "scripts": [
      "models/**/*.js",
      "routes/**/*.js",
      "scripts/**/*.js"
    ]
  },
  "keywords": [
    "hospital",
    "queue",
    "management",
    "ticket",
    "system",
    "urdu",
    "voice",
    "mp3"
  ],
  "author": "Razi Hospital",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  }
}
