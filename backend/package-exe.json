{
  "name": "hospital-queue-system",
  "version": "1.0.0",
  "description": "Hospital Queue Management System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "build-frontend": "cd ../frontend && npm run build",
    "package": "pkg . --target node18-win-x64 --output hospital-queue-system.exe"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.0.0",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "../frontend/build/**/*",
      "uploads/**/*",
      "models/**/*",
      "routes/**/*",
      ".env"
    ],
    "targets": [
      "node18-win-x64"
    ]
  }
}